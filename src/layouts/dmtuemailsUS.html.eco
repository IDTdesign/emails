<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" type="text/css" href="<%= @getUrl('../css/emails.css') %>" />
    <link rel="stylesheet" type="text/css" href="<%= @getUrl('../css/custom-emails.css') %>" />
</head>

<body>
    <table class="body">
      <tr>
        <td class="center" align="center" valign="top">
          <center>

            <table class="row">
              <tr>
                <td class="center" align="center">
                  <center>

                    <table class="container">
                      <tr>
                        <td class="wrapper paper last">

                          <table class="twelve columns header">
                            <tr>
                              <td class="header-images">
                                <img src="<%= @getUrl("/images/br-logo-top.png")%>" data-inline-ignore alt="BOSS" width="75" height="67" />
                              </td>
                              <td class="expander"></td>
                            </tr>
                          </table>

                          <table class="twelve columns header-2">
                            <tr>
                              <td class="header-images">
                                <img src="<%= @getUrl("/images/br-logo-bottom.png")%>" data-inline-ignore alt="BOSS" width="75" height="28" />
                              </td>
                              <td class="expander"></td>
                            </tr>
                          </table>

                          <!-- ### BEGIN CONTENT ### -->
                          <%- @content %>
                          <!-- ### END CONTENT ### -->

                          <table class="twelve columns">
                            <tr>
                              <td class="center bosslink" align="center">
                                <% if (@document.lang == 'en') : %>
                                  <a href="http://www.bossrevolution.com?lang=en-US" target="_blank" class="center bosslink">www.<strong class="red">boss</strong><strong class="black">revolution</strong>.com</a>
                                <% else : %>
                                  <a href="http://www.bossrevolution.com?lang=es-US" target="_blank" class="center bosslink">www.<strong class="red">boss</strong><strong class="black">revolution</strong>.com</a>
                                <% end %>
                              </td>
                              <td class="expander"></td>
                            </tr>
                          </table>

                        </td>
                      </tr>
                    </table>

                  </center>
                </td>
              </tr>
            </table>

            <table class="row footer">
              <tbody>
                <tr>
                  <td class="center" align="center">
                    <center>

                      <table class="container">
                        <tbody>
                          <tr>
                            <td class="wrapper last">

                              <table class="fullwidth">
                                <tbody>
                                  <tr>
                                    <td class="center sign-text" align="center" style="padding-top:10px !important;">
                                      <center>
                                        <% if (@document.lang == 'en') : %>
                                          Thank you,
                                          <br />Boss Revolution Customer Services
                                        <% else : %>
                                          Gracias,
                                          <br />Servicio al Cliente de Boss Revolution
                                        <% end %>
                                      </center>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td style="heigth:30px;"><br/></td>
                                  </tr>
                                </tbody>
                              </table>

                            </td>
                          </tr>
                        </tbody>
                      </table>

                    </center>
                  </td>
                </tr>
              </tbody>
            </table>

          </center>
        </td>
      </tr>
    </table>
  </body>
</html>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" type="text/css" href="<%= @getUrl('../css/foundation-emails.css') %>" />
    <link rel="stylesheet" type="text/css" href="<%= @getUrl('../css/mvnoemails2.css') %>" />
</head>
<body>
    <table class="body" data-made-with-foundation>
        <tr>
            <td class="float-center" align="center" valign="top">
                <center>
                    <table class="container">
                        <tr>
                            <td class="paper">
                                <table class="row">
                                    <tr>
                                        <th class="header">
                                            <table class="spacer">
                                                <tbody>
                                                    <tr>
                                                        <td height="4px" style="font-size:4px;line-height:4px;">&#xA0;</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <%- @content %>
                                        </td>
                                    </tr>
                                </table>
                                <table class="fullwidth text-center">
                                    <tr>
                                        <td class="mvno-footer">
                                            <% if (@document.lang == 'es') : %>
                                            <a href="https://bosswireless.com/es-us/" target="_blank" class="text-center">
                                                <img src="<%= @getUrl('/mvno/images/brm-footer-es@2x.png')%>"  alt="https://bosswireless.com" width="580" />
                                            </a>
                                            <% else : %>
                                            <a href="https://bosswireless.com/en-us/" target="_blank" class="text-center">
                                                <img src="<%= @getUrl('/mvno/images/brm-footer-en@2x.png')%>"  alt="https://bosswireless.com" width="580" />
                                            </a>
                                            <% end %>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </center>
            </td>
        </tr>
    </table>
</body>
</html>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" type="text/css" href="<%= @getUrl('../css/foundation-emails.css') %>" />
    <link rel="stylesheet" type="text/css" href="<%= @getUrl('../css/mvnoemails.css') %>" />
</head>
<body>
    <table class="body" data-made-with-foundation>
        <tr>
            <td class="float-center" align="center" valign="top">
                <center>
                    <table class="container">
                        <tr>
                            <td class="paper">
                                <table class="row">
                                    <tr>
                                        <th class="header">
                                            <table class="spacer">
                                                <tbody>
                                                    <tr>
                                                        <td height="4px" style="font-size:4px;line-height:4px;">&#xA0;</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <%- @content %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="columns first last">
                                            <table class="spacer">
                                                <tbody>
                                                    <tr>
                                                        <td height="24px" style="font-size:24px;line-height:24px;">&#xA0;</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <table class="fullwidth text-center">
                                                <tr>
                                                    <td class="mvno-logo">
                                                        <% if (@document.lang == 'es') : %>
                                                        <a href="https://bossrevolutionmobile.com/es-us/" target="_blank" class="text-center">
                                                            <img src="<%= @getUrl('/mvno/images/bossrevolution-mobile-horizontal@2x.png')%>" class="float-center" alt="BOSS" width="134" height="65"/>
                                                        </a>
                                                        <% else : %>
                                                        <a href="https://bossrevolutionmobile.com/en-us/" target="_blank" class="text-center">
                                                            <img src="<%= @getUrl('/mvno/images/bossrevolution-mobile-horizontal@2x.png')%>" class="float-center" alt="BOSS" width="134" height="65"/>
                                                        </a>
                                                        <% end %>

                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="text-center bosslink-wrapper" align="center">
                                                        <% if (@document.lang == 'es') : %>
                                                        <a href="https://bossrevolutionmobile.com/es-us/" target="_blank" class="text-center bosslink"><strong class="black">bossrevolution</strong><strong class="red">mobile</strong>.com</a>
                                                        <% else : %>
                                                        <a href="https://bossrevolutionmobile.com/en-us/" target="_blank" class="text-center bosslink"><strong class="black">bossrevolution</strong><strong class="red">mobile</strong>.com</a>
                                                        <% end %>
                                                    </td>
                                                    <td class="expander"></td>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </center>
            </td>
        </tr>
    </table>
</body>
</html>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" type="text/css" href="<%= @getUrl('../css/foundation-emails.css') %>" />
    <link rel="stylesheet" type="text/css" href="<%= @getUrl('../css/mvnoemails.css') %>" />
</head>
<body>
    <table class="body" data-made-with-foundation>
        <tr>
            <td class="float-center" align="center" valign="top">
                <center>
                    <table class="container">
                        <tr>
                            <td class="paper">
                                <table class="row">
                                    <tr>
                                        <th class="header">
                                            <table class="fullwidth">
                                                <tr>
                                                    <td class="header-images">
                                                        <img src="images/bossrevolution-mobile-horizontal@2x.png" data-inline-ignore alt="BOSS" width="82.45" height="40" />
                                                    </td>
                                                    <td class="header-center"></td>
                                                    <td class="header-link text-center">
                                                        <% if (@document.lang == 'es') : %>
                                                        <a href="#">Mi cuenta</a>
                                                        <% else : %>
                                                        <a href="#">My Account</a>
                                                        <% end %>
                                                    </td>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <%- @content %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="columns first last">
                                            <table class="fullwidth">
                                                <tr>
                                                    <td class="text-center bosslink" align="center">
                                                        <% if (@document.lang == 'es') : %>
                                                        <a href="https://www.bossrevolutionmobile.com/es-US" target="_blank" class="center bosslink"><strong class="black">bossrevolution</strong><strong class="red">mobile</strong>.com</a>
                                                        <% else : %>
                                                        <a href="https://www.bossrevolutionmobile.com/en-US" target="_blank" class="center bosslink"><strong class="black">bossrevolution</strong><strong class="red">mobile</strong>.com</a>
                                                        <% end %>
                                                    </td>
                                                    <td class="expander"></td>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </center>
            </td>
        </tr>
    </table>
</body>
</html>
